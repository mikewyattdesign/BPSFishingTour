<div class="backgroundLogin">
    <div class="formContainer">
        <h2>Change your password</h2>

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>

            <div>
                <%= f.label :password, "New password", class: "newPassword" %>
                <%= f.password_field :password, :autofocus => true, class: "submitLogin" %>
            </div>

            <div>
                <%= f.label :password_confirmation, "Confirm new password", class: "newPassword" %>
                <%= f.password_field :password_confirmation, class: "submitLogin" %>
            </div>

            <div>
                <%= f.submit "Change my password", class: "greenButton"  %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>